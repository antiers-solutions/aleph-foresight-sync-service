{
   "compilerOptions": {
      "sourceMap": true,
      "module": "commonjs",
      "target": "es2017",
      "outDir": "./dist",
      "baseUrl": "./src",
      "paths": {
         "@middlewares": ["middlewares/index"],
         "@interfaces": ["interfaces/index"],
         "@exceptions": ["exceptions/index"],
         "@modules/*": ["modules/*"]
      },
     "alwaysStrict": false,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node"
   },
   "rules": {
      "no-duplicate-case": true,
      "@typescript-eslint/ban-ts-comment": [
         "error",
         {
            "ts-ignore": "always"
         }
      ]
   },
   "include": ["src/**/*.ts"],
   "exclude": ["node_modules", "src/test", "src/test/helper/testSetup.ts"]
}
